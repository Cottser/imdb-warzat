{
  "name": "IMDB Watchlist available at Redbox",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Decorates your IMDB watchlist with an indicator and a link when a movie is available at Redbox",
  "content_scripts": [
    {
      "matches": ["http://www.imdb.com/*/watchlist*"],
      "run_at": "document_end",
      "css": ["available-at.css"],
      "js": ["jquery-1.8.3.min.js","sha1.js","oauth.js","at-redbox.js"]
    }
  ],
  "permissions": [
      "http://api-public.netflix.com/"
  ],
  
  "web_accessible_resources": [
    "images/Netflix.png"
  ]
}